postgresql:
  replication:
    enabled: true
  replicaCount: 2

  nodeSelector:
    cloud.google.com/gke-nodepool: db-pool

  persistence:
    enabled: true
    size: 4Gi

  resources:
    requests:
      cpu: 100m
      memory: 256Mi
    limits:
      cpu: 500m
      memory: 512Mi

pgpool:
  replicaCount: 1

  nodeSelector:
    cloud.google.com/gke-nodepool: db-pool

  resources:
    requests:
      cpu: 100m
      memory: 128Mi
    limits:
      cpu: 300m
      memory: 256Mi

patroni:
  enableBootstrap: true
  useConfigMap: false

  nodeSelector:
    cloud.google.com/gke-nodepool: db-pool

  resources:
    requests:
      cpu: 100m
      memory: 256Mi
    limits:
      cpu: 300m
      memory: 512Mi
